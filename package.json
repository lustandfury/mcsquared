{
  "name": "mcsquared",
  "version": "1.0.0",
  "description": "Portfolio of Mike Costanzo. Head of UX & Product Design at Rangle.io",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git://github.com/lustandfury/mcsquared.git"
  },
  "author": "lustandfury",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lustandfury/mcsquared/issues"
  },
  "devDependencies": {
    "browser-sync": "^1.1.1",
    "copy-files": "^0.1.0",
    "immutable-css-cli": "^1.1.1",
    "tachyons-cli": "^1.0.8",
    "watch": "^0.19.2"
  },
  "scripts": {
    "start": "npm run build:watch",
    "mutations": "immutable-css src/tachyons.css --strict",
    "build": "npm run build:css && npm run build:minify",
    "build:css": "tachyons src/tachyons.css > css/tachyons.css",
    "build:minify": "tachyons src/tachyons.css -m > css/tachyons.min.css",
    "build:watch": "watch 'npm run build' ./src/"
  }
}
